package oop1;

import java.util.ArrayList;

public class Main {

	public static void main(String[] args) {

		Product productOne = new Product();

		// set value
		productOne.name = "Delonghi Kahve Makinesi";
		productOne.unitPrice = 7500;
		productOne.discount = 7;
		productOne.unitsInStock = 97;
		productOne.imageUrl = "kahvemakinesi.jpg";
		
		Product productTwo = new Product();
		
		productTwo.name = "Smeg Kahve Makinesi";
		productTwo.unitPrice = 6500;
		productTwo.discount = 8;
		productTwo.unitsInStock = 2;
		productTwo.imageUrl = "kahvemakinesi.jpg";
		
		Product productThree = new Product();
		
		productThree.name = "Kitchen Aid Kahve Makinesi";
		productThree.unitPrice = 4500;
		productThree.discount = 9;
		productThree.unitsInStock = 4;
		productThree.imageUrl = "kahvemakinesi.jpg";

		// get value
		System.out.println(productOne.imageUrl);
		
		Product[] productsOne= {productOne,productTwo,productThree};
		
		for (Product product : productsOne) {
			System.out.println(product.name);
		}

		ArrayList<Product> products = new ArrayList<Product>();
		products.add(productOne);
		products.add(productTwo);
		products.add(productThree);
		

		for (Product product : products) {
			System.out.println("Ürün : "+product.name+product.unitPrice+product.discount+product.unitsInStock+ product.imageUrl);
		}

	}

}
